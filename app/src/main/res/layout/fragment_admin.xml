<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AdminFragment">

    <TextView
        android:id="@+id/hello_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello, Admin"
        android:textStyle="bold"
        style="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="18dp"
        android:layout_alignParentTop="true"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/see_truck_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hello_tv"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        app:cardCornerRadius="17dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            >

            <ImageView
                android:id="@+id/see_truck_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="19dp" />

            <TextView
                android:id="@+id/see_truck_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check truck details"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_toRightOf="@id/see_truck_iv"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="17dp"
                />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/help_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_truck_cv"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        app:cardCornerRadius="17dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            >

            <ImageView
                android:id="@+id/help_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_help"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="19dp" />

            <TextView
                android:id="@+id/help_tv"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="17dp"
                android:layout_toRightOf="@id/help_iv"
                android:text="Resolve issues" />




        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/add_truck_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/see_truck_cv"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        app:cardCornerRadius="17dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            >

            <ImageView
                android:id="@+id/add_truck_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_truck"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="19dp" />

            <TextView
                android:id="@+id/add_truck_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add/Update truck details"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_toRightOf="@id/add_truck_iv"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="17dp"
                />
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>